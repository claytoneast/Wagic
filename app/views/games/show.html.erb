<button type="button" name="button">Game Button</button>
<% if user_signed_in? && @game.user_check(current_user) %>
  You are part of this game!
<% elsif user_signed_in? && !@game.user_check(current_user) %>
  you are not part of this game
  <%= link_to "Join this game", game_path, method: :patch %>
<% end %>

<% @game.users.each do |user| %>
  <%= user.email %>
<% end %>
<br>
<br>

<% @game_state.each do |horizontal| %>
<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1" id="row<%= horizontal.first['coordX'] %> ">
    <% horizontal.each do |vertical| %>
      <%= link_to vertical['letter'],
      game_path(data: vertical),
      :method => :put,
      class: 'btn btn-primary btn-game',
      id: "coordX#{vertical["coordX"]}coordY#{vertical["coordY"]}",
      data: {
        coordX: vertical['coordX'],
        coordY: vertical['coordY'],
        color: vertical['color']},
      style: "background-color:#{vertical["color"]}" %>

    <% end %>

  </div>
<% end %>
